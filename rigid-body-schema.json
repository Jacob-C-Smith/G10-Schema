{
    "$schema"      : "http://json-schema.org/schema",
    "title"        : "G10 Rigid body",
    "type"         : "object",
    "description"  : "G10 rigid body object",
    "properties"   : {
        "mass"     : {
            "title"       : "mass",
            "type"        : "number",
            "default"     : 1,
            "description" : "The mass of the object in kilograms."
        },
        "active" : { 
            "title"       : "active",
            "type"        : "boolean",
            "default"     : false,
            "description" : "Does the object respond to forces?"
        }
    },
    "required"     : [ "active" ]
}