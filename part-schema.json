{
    "$schema"      : "http://json-schema.org/schema",
    "title"        : "G10 Part",
    "type"         : "object",
    "description"  : "G10 camera object definition",
    "properties"   : {
        "name"     : {
            "title"       : "name",
            "type"        : "string",
            "default"     : "Part",
            "minLength"   : 1,
            "maxLength"   : 255,
            "description" : "The name of the part"
        },
        "comment" : {
            "title"       : "comment",
            "type"        : "string",
            "default"     : "comment",
            "description" : "A comment that is ignored by G10"
        },
        "path"     : {
            "title"       : "path",
            "type"        : "string",
            "default"     : "path/to/file.ply",
            "description" : "The path to the part"
        },
        "shader"     : {
            "title"       : "name",
            "type"        : [ "string", "object" ],
            "oneOf"       : [
                { "type" : "string" },
                { "$ref" : "shader-schema.json" }
            ],
            "default"     : "G10 PBR",
            "description" : "The of the shader to use while drawing the part"
        },
        "material"   : {
            "title"       : "material",
            "type"        : "string",
            "oneOf"       : [
                { "type" : "string" },
                { "$ref" : "material-schema.json" }
            ],
            "default"     : "G10 Missing Material",
            "description" : "The name of the material to use while shading the part"
        }
    },
    "required"     : [ "name", "path" ]
}