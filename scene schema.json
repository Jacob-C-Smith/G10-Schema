{
    "$schema": "http://json-schema.org/schema",
    "title" : "G10 Input",
    "type" : "object",
    "description": "The G10 input defines",
    "properties": {
        "name" : {
            "title"       : "name",
            "type"        : "string",
            "default"     : "G10 Scene",
            "minLength"   : 1,
            "maxLength"   : 255,
            "description" : "The name of the scene"
        },
        "comment" : {
            "title"       : "comment",
            "type"        : "string",
            "default"     : "comment",
            "description" : "A comment that is ignored by G10"
        },
        "entities" : {
            "title"       : "entities",
            "type"        : "array",
            "description" : "A list of entities",
            "uniqueItems" : true,
            "items"       : {
                "oneOf" : [
                    { "type" : "string" },
                    { "$ref" : "entity schema.json" }
                ] 
            },
            "default"     : [ ]
        },
        "cameras" : {
            "title"       : "cameras",
            "type"        : "array",
            "description" : "A list of cameras",
            "uniqueItems" : true,
            "items"       : {
                "oneOf" : [ 
                    { "type" : "string" },
                    { "$ref" : "camera schema.json" }
                ] 
            },
            "default"     : [ ]
        },
        "lights" : {
            "title"       : "lights",
            "type"        : "array",
            "description" : "A list of lights",
            "uniqueItems" : true,
            "items"       : {
                "oneOf" : [ 
                    { "type" : "string" },
                    { "$ref" : "light schema.json" }
                ] 
            },
            "default"     : [ ]
        },
        "skybox" : {
            "title"       : "skybox",
            "type"        : [ "string", "object" ],
            "description" : "The skybox used by the scene",
            "oneOf"       : [
                        { "type":"string" },
                        { "$ref": "skybox schema.json" }
                      ],
            "default"     : { }
        }        
    },
    "required" : [ "name" ]
}