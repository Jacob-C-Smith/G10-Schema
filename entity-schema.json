{
    "$schema"      : "http://json-schema.org/schema",
    "title"        : "G10 Entity",
    "type"         : "object",
    "description"  : "G10 entity object definition",
    "properties"   : {
        "name"     : {
            "title"       : "name",
            "type"        : "string",
            "default"     : "Entity",
            "minLength"   : 1,
            "maxLength"   : 255,
            "description" : "The name of the entity"
        },
        "comment" : {
            "title"       : "comment",
            "type"        : "string",
            "default"     : "comment",
            "description" : "A comment that is ignored by G10"
        },
        "materials" : {
            "title": "materials",
            "type" : "array",
            "description": "A list of materials",
            "uniqueItems" : true,
            "items"       : {
                "oneOf" : [ 
                    { "type" : "string" },
                    { "$ref" : "material-schema.json" }
                ] 
            },
            "default" : [ ]
        },
        "parts" : {
            "title": "parts",
            "type" : "array",
            "description": "A list of parts",
            "uniqueItems": true,
            "items": {
                "oneOf" : [
                    { "type" : "string" },
                    { "$ref": "part-schema.json" }
                ]
            },
            "default" : [ ]
        },
        "shader" : {
            "title": "shader",
            "type" : [ "string", "object" ],
            "description": "Specifies a shader ",
            "uniqueItems": true,
            "oneOf" : [
                    { "type" : "string" },
                    { "$ref": "shader-schema.json" }
            ],
            "default" : "G10/shaders/G10 PBR.json"
        },
        "transform" : {
            "title": "transform",
            "type" : [ "string", "object" ],
            "description": "Specifies a transform",
            "uniqueItems": true,
            "oneOf" : [
                    { "type" : "string" },
                    { "$ref": "transform-schema.json" }
            ],
            "default" : {
                "location": [
                    0,
                    0,
                    0
                ],
                "rotation": [
                    90.0,
                    45.0,
                    0.0,
                    0.0
                ],
                "scale": [
                    1.0,
                    1.0,
                    1.0
                ]
            }
        },
        "rigidbody" : {
            "title": "rigidbody",
            "type" :  "object",
            "description": "Specifies a rigidbody",
            "uniqueItems": true,
            "oneOf" : [
                { "type" : "string" },
                { "$ref": "rigid-body-schema.json" }
            ],
            "default" : {
                "active" : false,
                "mass"   : 1
            }
        },
        "collider" : {

        },
        "rig" : {
            "title": "rig",
            "type" : [ "object", "string" ],
            "description": "Specifies a rig",
            "oneOf": [
                {"type" : "string"},
                {"$ref": "rig-schema.json"}
            ]   
        },
        "particle system" : {

        }
    },
    "required"     : [ "name" ]
}